<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
  <h2>Categories</h2>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <%= link_to "Add New Category", new_category_path, class: "btn btn-large btn-secondary" %>
    </div>
  </div>
</div>
<table class="table table-striped clearance_batches">
  <thead>
    <tr>
      <th>Category</th>
      <th>Number of Items</th>
      <th>Edit Category</th>
      <th>Delete Category</th>
    </tr>
  </thead>
  <tbody>
    <%- @categories.each do |category| -%>
    <tr>
      <td><%= link_to category.name, category %></td>
      <td><%= category.items.needed.count %></td>
      <td><%= link_to icon("fas", "pencil-alt"), edit_category_path(category) %></td>
      <td><%= link_to icon("fas", "trash-alt"), category, method: :delete, data: { confirm: "You sure?" } %></td>
    </tr>
    <% end %>
  </tbody>