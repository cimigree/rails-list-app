<h2>New Item</h2>
<div class="row">
  <div class="col-md-12">
  <%= form_for(@item, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
        <div class="control-label">
          <%= f.label :name %>
        </div>
        <div>
          <%= f.text_field :name, class: "form-control", autofocus: true %>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
        <div class="control-label">
          <%= f.label :brand_name %>
        </div>
        <div>
          <%= f.text_field :brand_name, class: "form-control", autofocus: true %>
        </div>
      </div>
    </div>
    <div class="col-md-4 col-xs-12">
      <div class="form-group">
        <div class="control-label">
          <%= f.label :quantity %>
        </div>
        <div>
          <%= f.text_field :quantity, class: "form-control", autofocus: true %>
        </div>
      </div>
    </div>
    <div class="col-md-4 col-xs-12">
      <div class="form-group">
        <div class="control-label">
          <%= f.label :frequency %>
        </div>
        <div>
          <%= f.select(:frequency, options_for_select([['Weekly', 'weekly'], ['Biweekly', 'biweekly'],['Monthly', 'monthly'], ['As Needed', 'as needed']]), {}, {class: "form-control"}) %>
        </div>
      </div>
    </div>
    <div class="col-md-4 col-xs-12">
      <div class="form-group">
        <div class="control-label">
          <%= f.label :category %>
        </div>
        <div>
          <%= f.collection_select :category_id, Category.all, :id, :name, {selected: @item.category_id || 15}, {class: "form-control"} %>
        </div>
      </div>
    </div>
    <div class="col-md-4 col-xs-12">
      <div class="form-group">
        <div class="control-label">
          <%= f.label :store %>
        </div>
        <div>
          <%= f.collection_select :store_ids, Store.all, :id, :name, {selected: @item.store_ids[0] || 1}, {multiple: true, class: "form-control"} %>
        </div>
      </div>
    </div>
    <div class="col-md-2 col-xs-12">
      <div class="form-group">
        <div class="control-label">
          <%= f.label :coupon %>
        </div>
        <div>
          <%= f.check_box :coupon, {}, {class: "form-control"} %>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
        <div class="control-label">
          <%= f.label :note %>
        </div>
        <div>
          <%= f.text_area :note, rows: 4, class: "form-control", autofocus: true %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-4">
      <div>
        <%= f.submit class: 'btn btn-primary btn-lg' %> 
      </div>
    </div>
    <% end %>
    <div class="offset-3 offset-md-0 col-4">
      <%= link_to 'Cancel', items_path, class: 'btn btn-secondary btn-lg' %> 
    </div>
  </div>
</div>