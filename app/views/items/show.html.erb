<div class="row">
  <h2 class="col show-item-name"><%= @item.name %> </h2>
  <%= link_to "Back to List", items_path, class: "col-xs-4 mr-2 mb-2 btn btn-info back-to-button" %>
</div>
<ul class="list-group list-group-flush">
  <li class="row justify-content-around">
    <span class="list-group-item"><%= link_to icon("fas", "pencil-alt"), edit_item_path(@item) %></span>
    <span class="list-group-item"><%= link_to icon("fas", "trash-alt"), @item, method: :delete, data: { confirm: "You sure?" } %></span>
  </li>
  <li class="list-group-item"><strong>Brand:</strong> <%= @item.brand_name %></li>
  <li class="list-group-item"><strong>Quantity:</strong> <%= @item.quantity %></li>
  <li class="list-group-item"><strong>Note:</strong> <%= @item.note %></li>
  <li class="list-group-item"><strong>Category:</strong> <%= @item.category ? @item.category.name : '' %></li>
  <li class="list-group-item"><strong>Frequency:</strong> <%= @item.frequency %></li>
  <li class="list-group-item"><strong>Coupon:</strong> <%= @item.coupon ? "Yes" : "No" %></li>
  <li class="list-group-item"><strong>Purchased:</strong> <%= @item.purchased ? "Yes" : "Not yet" %></li>
  
</ul>